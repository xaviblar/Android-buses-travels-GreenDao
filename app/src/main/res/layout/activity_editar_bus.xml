<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.xavier.lab_viajesbuses.editar_bus">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Editar Bus"
        android:id="@+id/TV_editar_bus"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <fragment
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:name="com.example.xavier.lab_viajesbuses.fragment_add_edit_bus"
        android:id="@+id/frag_editar_bus"
        tools:layout="@layout/fragment_add_edit_bus"
        android:layout_below="@+id/TV_matricula_spinner"
        android:layout_alignParentStart="true"
        android:layout_marginTop="35dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Matricula Bus:"
        android:id="@+id/TV_matricula_spinner"
        android:layout_below="@+id/TV_editar_bus"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SPN_matricula_editar_bus"
        android:layout_alignTop="@+id/TV_matricula_spinner"
        android:layout_alignStart="@+id/TV_editar_bus" />

</RelativeLayout>
