<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Matricula del bus:"
        android:id="@+id/TV_matricula_viaje"
        android:layout_below="@+id/ET_pasajeros_viaje"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Destino:"
        android:id="@+id/TV_destino"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ET_destino_viaje"
        android:layout_below="@+id/TV_destino"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Cantidad de pasajeros:"
        android:id="@+id/TV_pasajeros_viaje"
        android:layout_below="@+id/ET_destino_viaje"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ET_pasajeros_viaje"
        android:layout_below="@+id/TV_pasajeros_viaje"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/SPN_matricula_viaje"
        android:layout_below="@+id/ET_pasajeros_viaje"
        android:layout_toEndOf="@+id/TV_matricula_viaje" />
</RelativeLayout>